<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_bg"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:gravity="left"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="Escolha um quiz" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="20dp">


        <ImageView
            android:id="@+id/iv_imageQuiz"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_flag_of_brazil"
            android:contentDescription="TODO"
            android:clickable="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Descubra os paises" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="20dp">


        <ImageView
            android:id="@+id/iv_addQuiz"
            android:layout_width="232dp"
            android:layout_height="100dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:clickable="true"
            android:contentDescription="TODO"
            app:srcCompat="@drawable/ic_plus_image" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Adicionar novo quiz" />

    </LinearLayout>



</LinearLayout>